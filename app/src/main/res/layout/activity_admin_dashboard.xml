<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/loginandregister"
        tools:context=".AdminDashboard">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="294dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/showimage" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="181dp"
                        android:text="Admin Dashboard"
                        android:textColor="#070707"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/profile_admin"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="33dp"
                        app:srcCompat="@drawable/person_icon" />

                </RelativeLayout>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:rowCount="3"
                    android:columnCount="2">

                    <androidx.cardview.widget.CardView
                        android:layout_height="150dp"
                        android:layout_width="134dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/addnewcompany"
                        app:cardBackgroundColor="@android:color/holo_blue_light"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="8dp"
                        android:elevation="5dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/company"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Add New Company"
                                android:padding="10dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/companylist"
                        android:layout_width="150dp"
                        android:layout_height="134dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:elevation="5dp"
                        android:focusable="true"
                        app:cardBackgroundColor="@android:color/holo_blue_light"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/list_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Companies List" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_height="150dp"
                        android:layout_width="150dp"
                        android:layout_rowWeight="1"
                        android:clickable="true"
                        app:cardBackgroundColor="@android:color/holo_blue_light"
                        android:layout_columnWeight="1"
                        android:id="@+id/profile"
                        android:focusable="true"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="8dp"
                        android:elevation="5dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/profileperson"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="20dp"
                                android:text="Profile"/>                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_height="150dp"
                        android:layout_width="150dp"
                        android:layout_rowWeight="1"
                        android:id="@+id/logout_admin"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@android:color/holo_blue_light"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="8dp"
                        android:elevation="5dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/signout_icon"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Logout"
                                android:textSize="20dp"
                                android:padding="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                </GridLayout>


            </LinearLayout>


        </ScrollView>








    </LinearLayout>